{
  "openapi": "3.0.0",
  "info": {
    "title": "Chatbot API",
    "version": "1.0.0",
    "description": "API for the Integrated RAG Chatbot to handle user queries and content ingestion."
  },
  "servers": [
    {
      "url": "/api",
      "description": "Default server"
    }
  ],
  "paths": {
    "/chat": {
      "post": {
        "summary": "Submit a user query to the RAG chatbot",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "The user's question."
                  },
                  "context_selection": {
                    "type": "string",
                    "nullable": true,
                    "description": "Optional: User-selected text from the document to provide additional context."
                  },
                  "session_id": {
                    "type": "string",
                    "nullable": true,
                    "description": "Optional: Unique identifier for the chat session. If not provided, a new one is generated."
                  }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response from the chatbot.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": {
                      "type": "string",
                      "description": "The chatbot's generated answer."
                    },
                    "references": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "url": {
                            "type": "string",
                            "description": "URL to the source document/section."
                          },
                          "title": {
                            "type": "string",
                            "nullable": true,
                            "description": "Title of the source section or page."
                          }
                        },
                        "required": ["url"]
                      },
                      "description": "List of source references used to generate the answer."
                    },
                    "session_id": {
                      "type": "string",
                      "description": "The session ID for the current conversation."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or query.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ingest_content": {
      "post": {
        "summary": "Ingest processed Docusaurus content chunks into the RAG system.",
        "description": "This endpoint is typically used by an internal script or CI/CD pipeline to update the chatbot's knowledge base. Requires an API key for authentication.",
        "security": [
          {
            "APIKeyHeader": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "document_id": {
                    "type": "string",
                    "description": "A unique identifier for the source Docusaurus document (e.g., Markdown file path)."
                  },
                  "content": {
                    "type": "string",
                    "description": "The raw text content of the chunk to be embedded."
                  },
                  "source_url": {
                    "type": "string",
                    "description": "The absolute URL to the Docusaurus page where the chunk originated."
                  },
                  "section_title": {
                    "type": "string",
                    "nullable": true,
                    "description": "Optional: The title of the closest heading preceding the chunk."
                  }
                },
                "required": ["document_id", "content", "source_url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Content chunk ingested successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"]
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: Missing or invalid API key.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error during ingestion.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "APIKeyHeader": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header"
      }
    }
  }
}